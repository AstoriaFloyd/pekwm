NextFrame {
	Key = "Tab"
	Mod = "Alt"
}

# Groups
NextInFrame {
	Key = "Right"
	Mod = "Ctrl Alt"
}
PrevInFrame {
	Key = "Left"
	Mod = "Ctrl Alt"
}

# Workspaces 
NextWorkspace {
	Key = "Right"
	Mod = "Alt"
}
PrevWorkspace {
	Key = "Left"
	Mod = "Alt"
}

GoToWorkspace {
	Key = "F1"
	Mod = "Alt"
	Param = "1"
}
GoToWorkspace {
	Key = "F2"
	Mod = "Alt"
	Param = "2"
}
GoToWorkspace {
	Key = "F3"
	Mod = "Alt"
	Param = "3"
}
GoToWorkspace {
	Key = "F4"
	Mod = "Alt"
	Param = "4"
}
SendToWorkspace {
	Key = "F1"
	Mod = "Mod4"
	Param = "1"
}
SendToWorkspace {
	Key = "F2"
	Mod = "Mod4"
	Param = "2"
}
SendToWorkspace {
	Key = "F3"
	Mod = "Mod4"
	Param = "3"
}
SendToWorkspace {
	Key = "F4"
	Mod = "Mod4"
	Param = "4"
}

# External commands
Exec {
	Key = "x"
	Mod = "Mod4"
	Param = "xterm -bg black -fg white &"
}
