# Movement
NudgeHorizontal {
	Key = "b"
	Mod = "Mod4"
	Param = "-10"
}
NudgeHorizontal {
	Key = "f"
	Mod = "Mod4"
	Param = "10"
}
NudgeVertical {
	Key = "p"
	Mod = "Mod4"
	Param = "-10"
}
NudgeVertical {
	Key = "n"
	Mod = "Mod4"
	Param = "10"
}

