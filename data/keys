#}

# This requires you to have your xkb set up properly
# (These are the 'extra buttons' used on many keyboards)
Exec {
	Key = "XF86AudioPrev"
	Param = "xmms -r"
}
Exec {
	Key = "XF86AudioNext"
	Param = "xmms -f"
}
Exec {
	Key = "XF86AudioPlay"
	Param = "xmms -t"
}
Exec {
	Key = "XF86AudioStop"
	Param = "xmms -s"
}

# Wm actions
Reload {
	Key = "Delete"
	Mod = "Ctrl Alt Shift"
}
Restart {
	Key = "Delete"
	Mod = "Ctrl Alt"
}
Exit {
	Key = "End"
	Mod = "Ctrl Alt"
}
