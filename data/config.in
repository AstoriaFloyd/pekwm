Files {
	Keys = "~/.pekwm/keys"
	Mouse = "~/.pekwm/mouse"
	Menu = "~/.pekwm/menu"
	Start = "~/.pekwm/start"
	AutoProps = "~/.pekwm/autoprops"	
	Theme = "<PREFIX>/themes/default"
}

MoveResize {
	EdgeSnap = "10"
	FrameSnap = "0"
	OpaqueMove = "False"
	OpaqueResize = "False"
	GrabWhenResize = "True"

	WorkspaceWarp = "0"
	WrapWorkspaceWarp = "False"
}

Screen {
	Workspaces = "4"
	DoubleClickTime = "250"

	ReportOnlyFrames = "False"
	FocusModel = "Sloppy"
	PlacementModel = "Smart MouseCentered"
}

Harbour {
	OnTop = "True"
	Placement = "Right"
	Orientation = "TopToBottom"
}
